[run]
source = .
omit =
    tests/*
    examples/*
    scripts/*
    docs/*
    notebooks/*
    validate.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = reports/coverage

[xml]
output = reports/coverage.xml